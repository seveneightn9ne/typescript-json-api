{
    "compilerOptions": {
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "declaration": true,
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "lib": [
            "es5",
            "es2015",
            "dom"
        ],
        "plugins": [
            {
                "name": "typescript-tslint-plugin",
                "configFile": "tslint.json",
            }
        ]
    },
    "include": [
        "src/**/*"
    ]
}